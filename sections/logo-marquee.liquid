<div class="logo-marquee-container">
  {% if section.settings.heading or section.settings.context != blank or section.settings.subheading != blank %}
    {%- render 'section-header', subheading: section.settings.subheading, heading: section.settings.heading, content: section.settings.context, text_alignment: 'center' -%}
  {% endif %}

  <div class="logo-marquee-wrapper">
    <div class="logo-marquee-track">
      {% for block in section.blocks %}
        {% if block.settings.logo %}
          <div class="marquee_content_image">
            <a class="marquee_content_image_link"  href="{{ block.settings.link }}" target="_blank">
              {{ block.settings.logo | image_url: width: block.settings.logo.width | image_tag: loading: 'lazy', sizes: auto, widths: '1200,1400,1600,1800', class: 'zoom-image group-hover:zoom' }}
            </a>
          </div>
        {% endif %}
      {% endfor %}

      <!-- Duplicate for seamless scroll -->
      {% for block in section.blocks %}
        {% if block.settings.logo %}
          <div class="marquee_content_image">
            <a class="marquee_content_image_link"  href="{{ block.settings.link }}" target="_blank">
              {{ block.settings.logo | image_url: width: block.settings.logo.width | image_tag: loading: 'lazy', sizes: auto, widths: '1200,1400,1600,1800', class: 'zoom-image group-hover:zoom' }}
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  {% if section.settings.button_label and section.settings.button_link %}
    <div class="logo-marquee-button-wrapper">
      <a href="{{ section.settings.button_link }}" class="logo-marquee-button">{{ section.settings.button_label }}</a>
    </div>
  {% endif %}
</div>

{% style %}
.logo-marquee-container {
  text-align: center;
  /* padding: 40px 20px; */
  background: #fff;
}
.logo-marquee-heading {
  font-size: 28px;
  /* margin-bottom: 5px; */
  font-weight:400 !important;
  font-family: Felix Titling !important;
}
.logo-marquee-subheading {
  font-size: 14px;
  margin-bottom: 5px;
  font-weight:400 !important;
  text-transform: uppercase !important;
}
.logo-marquee-context {
  font-size: 12px;
  margin-bottom: 20px;
  color: #666;
}
.logo-marquee-wrapper {
  overflow: hidden;
  position: relative;
  width: 100%;
      margin-top: 1.5rem;
}
.logo-marquee-track {
  display: flex;
  
  animation: scroll-left 20s linear infinite;
}
  .logo-marquee-container h2.h2 {
    margin-top: 6px;
}
  .logo-marquee-container p.h6 {
    opacity: .6;
}
.logo-marquee-track img {
  height: auto;
  margin: 0px;
  flex-shrink: 0;
  object-fit: contain;
  max-height: fit-content;
}
.logo-marquee-button-wrapper {
  margin-top: 30px;
}
.logo-marquee-button {
  display: inline-block;
  padding: 12px 24px;
  background-color: #000;
  color: #fff;
  text-decoration: none;
  border-radius: 5px;
  transition: background 0.3s;
}
.logo-marquee-button:hover {
  background-color: #333;
}
@keyframes scroll-left {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}
@media(min-width: 700px){
  .marquee_content_image {
    max-width: 20%;
    width: 100%;
    min-width: 20%;
    display: block;
  }
}
{% endstyle %}

{% schema %}
