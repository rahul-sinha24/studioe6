      "label": "Heading"
    },
    
    {
      "type": "textarea",
      "id": "context",
      "label": "Paragraph"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
