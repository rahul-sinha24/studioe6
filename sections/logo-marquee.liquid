<div class="logo-marquee-wrapper">
  <div class="logo-marquee-track">
    {% for block in section.blocks %}
      {% if block.settings.logo %}
        <img src="{{ block.settings.logo | image_url: width: 300 }}" alt="Logo">
      {% endif %}
    {% endfor %}

    <!-- Duplicate for seamless scroll -->
    {% for block in section.blocks %}
      {% if block.settings.logo %}
        <img src="{{ block.settings.logo | image_url: width: 300 }}" alt="Logo">
      {% endif %}
    {% endfor %}
  </div>
</div>

  {% style %}
   .logo-marquee-wrapper {
  overflow: hidden;
  position: relative;
  width: 100%;
  background: #fff; /* Optional: adjust background */
  padding: 20px 0;
}

.logo-marquee-track {
  display: flex;
  width: max-content;
  animation: scroll-left 20s linear infinite;
}

.logo-marquee-track img {
  height: auto;
  margin: 0;
  flex-shrink: 0;
  object-fit: contain;
}

@keyframes scroll-left {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}
  {% endstyle %}

{% schema %}
{
  "name": "Auto Scrolling Logos",
  "max_blocks": 20,
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Upload Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Auto Scrolling Logos"
    }
  ]
}
{% endschema %}
